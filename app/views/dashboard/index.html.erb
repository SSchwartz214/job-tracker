<div class="jumbotron">
<h1>JobTracker</h1>
</div>
<div>
  <ul>
<% @level_of_interest.each do |k, v| %>
  <li>Level of Interest: <%= k %> (<%= v %>)jobs</li>
  <% end %>
  </ul>
</div>

<h3>Top 3 Companies by average</h3>
<div>
  <% @top_three.each do |top_three| %>
    <p><%= top_three[0] %> <%= top_three[1] %></p>
  <% end %>
</div>

<h3>Jobs by Location</h3>
<div>
  <% @jobs_by_location.each do |job| %>
  <p><%= link_to  job[0], "/jobs?location=#{job[0]}" %> - <%= job[1] %></p>
  <% end %>
</div>
