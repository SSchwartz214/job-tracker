<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h1 class="display-4">All Jobs</h1>
<hr class="my-4">
<%= link_to "Add a New Job", new_job_path, :class => "btn btn-primary btn-lg"%>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Role</th>
      <th scope="col">Company</th>
      <th scope="col">City</th>
      <th scope="col">Interest</th>
    </tr>
  </thead>
<% @jobs.each do |job| %>
<tbody>
  <tr>
    <td><%= link_to "Edit", edit_job_path(job), class: "btn btn-warning" %> <%= link_to "Delete", job_path(job), method: "delete", class: "btn btn-danger"%></td>
    <th scope="row"><%= link_to job.title, job_path(job) %></th>
    <td><%= job.company.name %></td>
    <td><%= job.city %></td>
    <td><%= job.level_of_interest %></td>
  </tr>
</tbody>
  <% end %>
