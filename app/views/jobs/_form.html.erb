<%= form_for [@company, @job] do |f| %>
<div class="form-group">
  <div class="exampleFormControlSelect1">
    <%= f.label :company %>
    <%= f.collection_select(:company_id, Company.all, :id, :name, class: 'category-select')%>
  </div>
  <div class="exampleFormControlInput1">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="exampleFormControlInput1">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="exampleFormControlInput1">
    <%= f.label :level_of_interest %>
    <%= f.number_field :level_of_interest %>
  <div class="exampleFormControlInput1">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="exampleFormControlSelect1">
    <%= f.label :category%>
    <%= f.collection_select(:category_id, Category.all, :id, :title, class: 'category-select')%>
  </div>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
